{
    "post": {
        "operationId": "authUser",
        "summary": "Start authentication",
        "description": "Initiates the user authentication process by providing a public key credential challenge.",
        "security": [],
        "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                            "username": {
                                "type": "string",
                                "description": "The username for starting the authentication process.",
                                "example": "sathvik"
                            }
                        },
                        "required": ["username"]
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Returns a public key credential challenge on success.",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": {
                                    "type": "string",
                                    "description": "Indicates the status of the request.",
                                    "example": "Ok"
                                },
                                "result": {
                                    "type": "object",
                                    "description": "The result of the authentication start process.",
                                    "properties": {
                                        "publicKey": {
                                            "type": "object",
                                            "description": "Public key credential options for authentication.",
                                            "properties": {
                                                "challenge": {
                                                    "type": "string",
                                                    "description": "A unique challenge to verify the user identity.",
                                                    "example": "WZnbaVRvM4CXui4BdhgGbyY62r4OMB0UVLb-KaU4POc"
                                                },
                                                "timeout": {
                                                    "type": "integer",
                                                    "description": "The time in milliseconds before the challenge expires.",
                                                    "example": 300000
                                                },
                                                "rpId": {
                                                    "type": "string",
                                                    "description": "The relying party identifier.",
                                                    "example": "localhost"
                                                },
                                                "allowCredentials": {
                                                    "type": "array",
                                                    "description": "List of credentials allowed for authentication.",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "type": {
                                                                "type": "string",
                                                                "description": "The type of the credential.",
                                                                "example": "public-key"
                                                            },
                                                            "id": {
                                                                "type": "string",
                                                                "description": "The unique identifier of the credential.",
                                                                "example": "BPCH09XtVQgVAQW3r4CCcw"
                                                            }
                                                        }
                                                    }
                                                },
                                                "userVerification": {
                                                    "type": "string",
                                                    "description": "The user verification requirement.",
                                                    "example": "required"
                                                }
                                            },
                                            "required": ["challenge", "timeout", "rpId", "allowCredentials", "userVerification"]
                                        }
                                    },
                                    "required": ["publicKey"]
                                }
                            },
                            "required": ["status", "result"]
                        }
                    }
                }
            }
        },
        "tags": ["Auth"]
    }
}
